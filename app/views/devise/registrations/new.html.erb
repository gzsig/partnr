          <%= f.input :profile_picture_cache, as: :hidden %>

          <div class="field">
            <%= f.input :favorite, label: "Favorito", collection: [ "Car", "Boat", "Helicopter", "Jet"], autofocus: true %>
          </div>

          <div class="field">
            <%= f.input :email, label: "E-mail", autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.input :first_name, label: "Primeiro nome" %>
          </div>

          <div class="field">
            <%= f.input :last_name, label: "Ãšltimo nome" %>
          </div>

          <div class="field">
            <%= f.input :phone_number, label: "Celular" %>
          </div>

          <div class="field">
            <%= f.input :CPF, label: "CPF" %>
          </div>

          <div class="field">
            <%= f.input :bio, label: "Biografia" %>
          </div>

          <div class="field">
            <%= f.input :occupation, label: "OcupaÃ§Ã£o" %>
          </div>

          <div class="field">
            <%= f.input :address, label: "EndereÃ§o" %>
          </div>

          <div class="field">
            <%= f.input :password, label: "Senha", autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.input :password_confirmation, label: "Confirmar senha", autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Salvar", class: 'btn btn-partnr btn-partnr-blue' %>
            <%= link_to "Login", new_user_session_path, class: 'btn btn-partnr btn-outline-partnr-yellow' %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
