<div class="container">
  <div class="card signup">
    <div class="signup-content">
      <h2 class="title-signup">Cadastrar-se</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= image_tag "", width: 100, class: "invisible photo1", id: "photo-preview0" %>
      <%= f.input :profile_picture, input_html: { class: 'invisible photo-input'}, label_html: { class: 'upload-profilephoto'}, label: 'ğŸ“· Escolher foto de perfil' %>
      <%= f.input :profile_picture_cache, as: :hidden %>

      <div class="field">
        <%= f.input :favorite, label: "Favorito", collection: [ "Car", "Boat", "Helicopter", "Jet"], autofocus: true %>
      </div>

      <div class="field">
        <%= f.input :email, label: "E-mail", autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.input :first_name, label: "Primeiro nome" %>
      </div>

      <div class="field">
        <%= f.input :last_name, label: "Ãšltimo nome" %>
      </div>

      <div class="field">
        <%= f.input :phone_number, label: "Celular" %>
      </div>

      <div class="field">
        <%= f.input :CPF, label: "CPF" %>
      </div>

      <div class="field">
        <%= f.input :bio, label: "Biografia" %>
      </div>

      <div class="field">
        <%= f.input :occupation, label: "OcupaÃ§Ã£o" %>
      </div>

      <div class="field">
        <%= f.input :address, label: "EndereÃ§o" %>
      </div>

      <div class="field">
        <%= f.input :password, label: "Senha", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>

      <div class="field">
        <%= f.input :password_confirmation, label: "Confirmar senha", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Salvar", class: 'btn btn-secondary btn-signup' %>
        <%= link_to "Cancelar", root_path, class: 'btn btn-secondary btn-signup' %>
        <%= link_to "Login", new_user_session_path, class: 'btn btn-secondary btn-signup' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
