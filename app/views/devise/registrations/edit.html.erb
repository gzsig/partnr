<div class="container">
  <div class="card profile-edit">
    <div class="profile-edit-content">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.input :profile_picture, input_html: { class: 'invisible'}, label_html: { class: 'upload-profilephoto'}, label: 'ðŸ“· Mudar foto de perfil' %>
      <%= f.input :profile_picture_cache, as: :hidden %>

      <div class="field">
        <%= f.input :favorite, collection: [ "Car", "Boat", "Helicopter", "Jet"], autofocus: true %>
      </div>

      <div class="field">
        <%= f.input :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.input :first_name %>
      </div>

      <div class="field">
        <%= f.input :last_name %>
      </div>

      <div class="field">
        <%= f.input :phone_number %>
      </div>

      <div class="field">
        <%= f.input :CPF %>
      </div>

      <div class="field">
        <%= f.input :bio %>
      </div>

      <div class="field">
        <%= f.input :occupation %>
      </div>

      <div class="field">
        <%= f.input :address %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.input :password, autocomplete: "new-password", hint: "Deixar em branco se nÃ£o quiser mudar." %>
        <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.input :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.input :current_password, autocomplete: "current-password", hint: "Precisamos da sua senha atual para confirmar suas mudanÃ§as." %>
      </div>

      <div class="actions">
        <%= f.submit "Salvar", class: 'btn btn-secondary btn-edit' %>
        <%= link_to "Voltar", :back, class: 'btn btn-secondary' %>
      </div>
      <% end %>

      <h3 class="cancel">Cancelar minha conta</h3>

      <p>Insatisfeito? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "VocÃª tem certeza" }, method: :delete, class: 'btn btn-secondary' %></p>
    </div>
  </div>
</div>
