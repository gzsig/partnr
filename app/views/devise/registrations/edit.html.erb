        <%= f.input :profile_picture_cache, as: :hidden %>

        <div class="field">
          <%= f.input :favorite, collection: [ "Carro", "Barco", "Helicoptero", "Jatinho"], autofocus: true, label: "Favorito" %>
        </div>

        <div class="field">
          <%= f.input :email, autofocus: true, autocomplete: "email", label: "E-mail" %>
        </div>

        <div class="field">
          <%= f.input :first_name, label: "Primeiro nome" %>
        </div>

        <div class="field">
