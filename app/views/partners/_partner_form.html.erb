<%= simple_form_for [@good, @partner] do |f|  %>

  <%= f.input :track_use, as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.input :other_drivers, as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.input :none_of_the_above, as: :boolean, checked_value: true, unchecked_value: false %>

  <%= f.button :submit, class:'btn btn-primary'%>

<% end %>
