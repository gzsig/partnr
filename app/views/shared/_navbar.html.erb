<div class="parntr-container">
  <div class="navbar bg-white p-4">
    <div class="partnr-logo">
      <%= link_to :root do %>
        <%= image_tag "partnr_dark.png" %>
      <% end %>
    </div>
    <div class="links">
      <div class="nav-bar-right d-flex align-items-center">
        <% if user_signed_in? %>
          <%= link_to "LOGOUT", destroy_user_session_path, method: :delete, class: "btn btn-link" %>
          <div class="image-navbar">
            <div class="dropdown  d-none d-sm-block">
              <%= image_tag "seb.jpeg", class: "rounded-circle px-3", alt:"avatar", type: "image", id: "dropdownMenuButton", data: { toggle:"dropdown" }, aria: { haspopup:"true", expanded: "false" } %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <%= link_to "My Profile", users_path(current_user), class: "dropdown-item" %>
                <%= link_to "Partners", "#", class: "dropdown-item" %>
              </div>
            </div>
          </div>
          <div class="dropdown burger d-block d-sm-none">
            <i class="fas fa-bars" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <%= link_to "My Profile", users_path(current_user), class: "dropdown-item" %>
              <%= link_to "Partners", "#", class: "dropdown-item" %>
            </div>
          </div>
        <% else %>
          <%= link_to t(".sign_in", default: "LOGIN"), new_user_session_path, class: "btn btn-link" %>
          <%= link_to t(".sign_in", default: "CRIAR CONTA"), new_user_registration_path, class: "btn btn-link" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
