<div class="container">
  <div class="row">
    <% @good.users.each do |user| %>
    <% unless user == current_user %>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <div class="card confirmation-card">
        <div style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_url "#{user.favorite}.jpg"%>)" class="profile-photo">
          <%= cl_image_tag user.profile_picture, width:170, height: 170, crop: :thumb, gravity: :face, class: 'profile-pic', style: "border-radius: 50%" %>
          <h5 class="confirmation-profile-name"><%= user.first_name %>  <%= user.last_name %></h5>
        </div>
        <div class="card-body profile-content">
          <br>
          <h5>Info</h5>
          <p><i class="far fa-id-card"> <%= user.CPF %></i></p>
          <p><i class="fas fa-briefcase"> <%= user.occupation %></i></p>
          <p><i class="fas fa-home"> <%= user.address %></i></p>
          <br>
          <div class="bg-white">
            <h5>Contact</h5>
            <p><i class="fas fa-at"> <%= user.email %></i></p>
            <p><i class="fas fa-phone"> <%= user.phone_number %></i></p>
          </div>
          <br>
          <h5>About me</h5>
          <p><i class="fas fa-book-open"> <%= user.bio %></i></p>

          <h4><%= user.first_name %>'s has chosen</h4>

          <% if @good.good_type.capitalize == 'Car' %>
          <% @good.partners.find(user: user) %>
          <p>km per month<%= @good.partners.find_by(user: user).km_month %></p>
          <p>track use<%= @good.partners.find_by(user: user).track_use %></p>
          <p>other drivers<%= @good.partners.find_by(user: user).other_drivers %></p>
          <% elsif @good.good_type.capitalize == 'Boat' %>
          <p>num of pass<%= @good.partners.find_by(user: user).numberber_of_passengers %></p>
          <p>km per month<%= @good.partners.find_by(user: user).km_month %></p>
          <p>frequency <%= @good.partners.find_by(user: user).frenquency_month %></p>
          <p>work?<%= @good.partners.find_by(user: user).for_work %></p>
          <% elsif @good.good_type.capitalize == 'Helicopter' %>
          <p>num of pass<%= @good.partners.find_by(user: user).numberber_of_passengers %></p>
          <p>km per month<%= @good.partners.find_by(user: user).km_month %></p>
          <p>frequency <%= @good.partners.find_by(user: user).frenquency_month %></p>
          <p>work?<%= @good.partners.find_by(user: user).for_work %></p>
          <% elsif @good.good_type.capitalize == 'Jet' %>
          <p>num of pass<%= @good.partners.find_by(user: user).numberber_of_passengers %></p>
          <p>km per month<%= @good.partners.find_by(user: user).km_month %></p>
          <p>frequency <%= @good.partners.find_by(user: user).frenquency_month %></p>
          <p>work?<%= @good.partners.find_by(user: user).for_work %></p>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
  <%= link_to 'CONFIRM', contract_path(@good), data: {confirm: "I agree to buy a #{@good.brand} #{@good.model}"}, class:'btn btn-secondary' %>
  <%= link_to 'CANCEL', good_partner_path(@good, @partner), method: 'delete', data: {confirm: "I agree to cancel my #{@good.brand} #{@good.model} order"}, class:'btn btn-secondary' %>
</div>
