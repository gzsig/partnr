<div class="container partners-container">
  <% if current_user.partners.empty? %>
  <div class="no-partners">
    <h1>Sorry <%= current_user.first_name %> it seems like you don't have any PARTNERS yet</h1>
    <p>go to the index page and ...</p>
  </div>
<% else %>
  <% @goods.each do |good| %>
  <div class="my-card d-flex align-content-end flex-wrap items-center">
    <h3><%= good.brand %> <%= good.model %></h3>
    <%= link_to "good", good_path(good), class: 'btn btn-light' %>
    <div class="ticaum-damassa">
      <% good.users.each do |user| %>
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-back">
            <h6><%= user.first_name %></h6><h6><%= user.last_name %></h6>
          </div>
          <div class="flip-card-front">
            <%= cl_image_tag user.profile_picture, height: 100, width: 100, crop: :thumb, gravity: :face, class: 'rounded-circle avatar' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
