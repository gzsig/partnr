<div class="container">
  <% @goods.each do |good| %>
  <div class="my-card d-flex align-content-end flex-wrap">
    <h3><%= good.brand %> <%= good.model %></h3>
    <div class="ticaum-damassa">
      <% good.users.each do |user| %>
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front">
            <%= cl_image_tag user.profile_picture, height: 100, width: 100, crop: :thumb, gravity: :face, class: 'rounded-circle avatar' %>
          </div>
          <div class="flip-card-back">
            <h6><%= user.first_name %></h6><h6><%= user.last_name %></h6>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  </div>
  <% end %>
</div>
