<div class="partnr-container m-5 p-5">
  <div class="bg-white rounded">
    <div style="background-image: url(<%= asset_url "#{@user.favorite}.jpg" %>)" class="profile-photo pl-5 mb-5 display-inline-block">
      <%= cl_image_tag current_user.profile_picture, secure: true, width:170, height: 170, crop: :thumb, gravity: :face, class: 'profile-pic', style: "border-radius: 50%" %>
    </div>
      <h5 class="text-white text-bolder display-inline-block"><%= @user.first_name %>  <%= @user.last_name %></h5>
    <div class="p-5 d-flex align-items-stretch">
      <div class="col-sm-12 col-md-3 pb-0">
        <h5 class="mb-4">Informações</h5>
        <p><i class="far fa-id-card"> <%= @user.CPF %></i></p>
        <p><i class="fas fa-briefcase"> <%= @user.occupation %></i></p>
        <p><i class="fas fa-home"> <%= @user.address %></i></p>
      </div>
      <div class="col-sm-12 col-md-4">
        <h5 class="mb-4">Contato</h5>
        <p><i class="fas fa-at"> <%= @user.email %></i></p>
        <p><i class="fas fa-phone"> <%= @user.phone_number %></i></p>
      </div>
      <div class="col-sm-12 col-md-5">
        <h5 class="mb-4">Sobre mim</h5>
        <p><i class="fas fa-book-open"> <%= @user.bio %></i></p>
      </div>
    </div>
    <div class="ml-3">
      <%= link_to 'Editar perfil', edit_user_registration_path, class: 'btn btn-partnr btn-partnr-blue mx-5 mb-5 p-3' %>
    </div>
  </div>
</div>
