<div class="container">
  <div class="card profile-user">
    <div style="background-image: url(<%= asset_url "#{@user.favorite}.jpg"%>)" class="profile-photo">
      <%= cl_image_tag current_user.profile_picture, width:170, height: 170, crop: :thumb, gravity: :face, class: 'profile-pic', style: "border-radius: 50%" %>
      <h5 class="profile-name"><%= @user.first_name %>  <%= @user.last_name %></h5>
    </div>
    <div class="card-body profile-content">
      <br>
      <h5>Informações</h5>
      <p><i class="far fa-id-card"> <%= @user.CPF %></i></p>
      <p><i class="fas fa-briefcase"> <%= @user.occupation %></i></p>
      <p><i class="fas fa-home"> <%= @user.address %></i></p>
      <br>
      <h5>Contato</h5>
      <p><i class="fas fa-at"> <%= @user.email %></i></p>
      <p><i class="fas fa-phone"> <%= @user.phone_number %></i></p>
      <br>
      <h5>Sobre mim</h5>
      <p><i class="fas fa-book-open"> <%= @user.bio %></i></p>

      <%= link_to 'Editar perfil', edit_user_registration_path, class: 'btn btn-secondary btn-profile' %>
    </div>
  </div>
</div>
