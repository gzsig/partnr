<% @goods.each do |good| %>
  <div class="col-sm-12 col-md-6 col-lg-4">
    <%= link_to good_path(good), class: 'text-decoration-none' do %>
      <div class="index-card mb-4 bg-white rounded">
        <div class="index-img" style="background-image: url(<%= cloudinary_url good.photo_one, secure: true %>)"> </div>
        <div class="card-body pb-2 mb-1">
          <div class="border-partnr-blue text-partnr-dark-gray rounded pl-1 pr-1 float-right"><%= good.good_type %></div>
          <h5 class="card-title"><strong><%= good.brand %></strong> <%= good.model %></h5>
          <div class="card-text">
            <div class="mt-3 mb-1 pb-2">
              <span class="h6 border-partnr-yellow text-partnr-yellow rounded p-1 mr-2"><%= good.fabrication_year %></span>
              <span class="text-partnr-dark-gray"><%= number_to_currency(good.kilometers, unit: "", precision: 0, delimiter: ".") %> km</span>
            </div>
            <div class="good-price">
              <p class="d-flex mb-0">
                <small>R$</small>
                <span class="h6">
                  <span class="font-weight-bold"><%= number_to_currency(good.price.to_i, unit: "", precision: 0, delimiter: ".") %></span> | <%= number_to_currency(good.price.to_i / 4, unit: "", precision: 0, delimiter: ".") %><small class="text-secondary">/partnr</small>
                </span>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
