<div class="col-xs-12 col-md-3 p-0 float-left">
  <%= render 'shared/search' %>
</div>

<div class="col-xs-12 col-md-9 d-flex flex-wrap p-0 pt-2 mt-1 float-right">
  <% @goods.each do |good| %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <%= link_to good_path(good), class: 'text-decoration-none' do %>
        <div class="index-card mb-4 bg-white rounded">
          <div class="index-img" style="background-image: url(<%= asset_url good.photo_one%>)"> </div>
          <div class="card-body pb-2 mb-1">
            <h5 class="card-title"><strong><%= good.brand %></strong> <%= good.model %></h5>
            <div class="card-text">
              <div class="mt-3 mb-1 pb-2">
                <span class="h6 border-partnr-yellow text-partnr-yellow rounded p-1 mr-2"><%= good.fabrication_year %></span>
                <span class="text-partnr-dark-gray"><%= good.kilometers %> km</span>
              </div>
              <div class="good-price">
                <p class="d-flex mb-0">
                  <small>R$</small>
                  <span class="h6">
                    <span class="font-weight-bold"><%= good.price %></span> | <%= good.price.to_i / 4 %><small class="text-secondary">/partnr</small>
                  </span>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
