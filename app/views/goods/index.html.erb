<div class="col-sm-2 p-0 float-left">
  <%= render 'shared/search' %>
</div>

<div class="col-sm-10 d-flex flex-wrap p-0 pt-2 float-right">
  <% @goods.each do |good| %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <%= link_to good_path(good), class: 'text-decoration-none' do %>
        <div class="card index-card">
          <div class="index-img"></div>
          <div class="card-body">
            <h5 class="card-title"><%= good.brand %> <%= good.model %></h5>
            <div class="card-text">
              <div class="good-type">
                <%= good.good_type %>
              </div>
              <div class="good-date">
                <%= good.model_year %>
                <%= good.fabrication_year %>
              </div>
              <div class="good-price">
                <%= good.price %>
              </div>
              <div class="good-details">
                <%= good.chassis %>
                <%= good.licens_plate %>
                <%= good.kilometers %>
                <%= good.color %>
              </div>
              <div class="good-facts">
                <%=  good.facts %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
